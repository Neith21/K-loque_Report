<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETALLES DEL INCIDENTE"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivIncidentImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvNoImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No hay imagen disponible"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tipo:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvIncidentType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Estado:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"
                        android:padding="4dp"
                        android:background="#4CAF50"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Comentario:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Creado por:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvCreatedBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Creado el:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvCreatedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Actualizado:"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvUpdatedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#111111"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Editar incidente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#03A9F4"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btnSoftDeleteIncident"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Ocultar incidente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E91E63"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btnDeleteIncident"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Eliminar incidente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6C757D"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</ScrollView>